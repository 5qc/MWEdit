// Import
@import "https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"

// Variables
mainFont = "Roboto Mono", monospace
bgColor = #222
textColor = #f8f8f8

// Mixins
font()
    font-family mainFont
    font-weight 400

// Styling
html, body
    height 100%
body
    font()
    margin 0
    background bgColor
    color textColor
textarea
    font()
    resize none
    &:focus
        outline none
.pointer
    cursor pointer
.link
    color currentColor
    text-decoration underline
    cursor pointer
    &:hover
        text-decoration none

.navbar
    background lighten(bgColor, 5%)
    padding 10px 20px
    font-size 20px
    position sticky
    top 0

.item
    display inline-block

    .item-name
        &:hover ~ .item-dropdown
            display block
    .item-dropdown
        display none
        list-style none
        margin 0
        padding 0
        position absolute
        background lighten(bgColor, 10%)
        padding 10px
        font-size 17px
        border-radius 5px
        &:hover
            display block

.content
    height 90%
    width 100%
    background transparent
    color textColor
    border none
    font-size 25px
    margin 0
    padding 0
    &:focus
        outline none
.preview
    font-size 25px